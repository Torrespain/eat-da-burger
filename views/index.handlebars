<h1> Want a Burger?</h1>

<div class="container">
	<div class="row">
		<div class="col-lg-5">
			<ul>
				{{#each burgers}}
					{{#unless devoured}}
						{{> burgers/burger-block devour=true}}
			    	{{/unless}}
 				 {{/each}}	
			</ul>
			
		</div>
		<div class="col-lg-2">
			
				
		</div>
		<div class="col-lg-5">
			<ul>
				{{#each burgers}}
					{{#if devoured}}
						{{> burgers/burger-block devour=false}}
			    	{{/if}}
 				 {{/each}}	
			</ul>
			
		</div>
		
	</div>
</div>