<div class="container">
	<h1> Want a burger? </h1>

	<div class="row">
		<div class="col-md-6">
			<h3>Ready to eat</h3>
			<div class="row">
				<ul>
					{{#each burgers}}
						{{#unless devoured}}
						<div class="col-md-8">
							<pre>{{this.id}}.{{this.burger_name}}</pre>
						</div>
						<div class="col-md-4">
							<button type="submit" data-id="{{id}}" data-state="0" class="btn btn-primary devourBtn">Devour</button>
						</div>
				    	{{/unless}}
	 				 {{/each}}	
				</ul>
			</div>
			
		</div>
		
		<div class="col-md-6">
			<h3>Devoured so far</h3>
				<div class="row">
					<ul>
						{{#each burgers}}
							{{#if devoured}}
								<div class="col-md-8">
									<pre>{{this.id}}.{{this.burger_name}}</pre>
								</div>
					    	{{/if}}
		 				 {{/each}}	
					</ul>
				</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<form class="create-form">
				<div class="form-group">
	    			<label for="burgerInput">Enter the burger you want to add</label>
	    			<textarea class="form-control" id="burgerText" rows="1"></textarea>
	  			</div>
	  			<button type="submit" id="addButton">Add your burger</button>
			</form>	
		</div>

	</div>

</div>